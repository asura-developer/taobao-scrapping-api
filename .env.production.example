# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=change_this_to_a_secure_password

# Alternative: Use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taobao_scraper?retryWrites=true&w=majority

# Scraper Configuration
SCRAPER_HEADLESS=true

# Optional: Add additional configuration
# SCRAPER_TIMEOUT=30000
# MAX_CONCURRENT_JOBS=5

