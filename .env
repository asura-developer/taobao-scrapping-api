# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin@localhost:27017/taobao_scraper?authSource=admin
# MongoDB Atlas alternative:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taobao_scraper

# Scraper Configuration
SCRAPER_HEADLESS=true
SCRAPER_MAX_PRODUCTS=1000
SCRAPER_MAX_PAGES=50
SCRAPER_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info